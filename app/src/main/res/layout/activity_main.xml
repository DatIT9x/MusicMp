            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="@string/g7"
            android:scaleType="centerCrop"
            android:src="@drawable/g1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="@string/g6"
            android:scaleType="centerCrop"
            android:src="@drawable/g2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="@string/g5"
            android:scaleType="centerCrop"
            android:src="@drawable/g3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="@string/g4"
            android:scaleType="centerCrop"
            android:src="@drawable/g4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
