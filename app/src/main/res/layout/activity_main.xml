            android:contentDescription="@string/g3"
            android:scaleType="centerCrop"
            android:src="@drawable/g5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="@string/g2"
            android:scaleType="centerCrop"
            android:src="@drawable/g6"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="@string/g1"
            android:scaleType="centerCrop"
            android:src="@drawable/g7"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="@string/g"
            android:scaleType="centerCrop"
            android:src="@drawable/g8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="@string/ok"
            android:scaleType="centerCrop"
            android:src="@drawable/ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ViewFlipper>
    <ListView
        android:background="@drawable/anhnen2"
        android:layout_below="@id/viewfipper"
        android:id="@+id/listviewbaihat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

